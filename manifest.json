{
  "manifest_version": 2,
  "name": "Github Notifications in Tabs",
  "version": "1.0",
  "description": "Opens a full page of GitHub notifications in tabs.",
  "homepage_url": "https://github.com/gibfahn/gnt",

  "permissions": [
    "activeTab"
  ],

  "icons": {
    "32": "gnt.svg",
    "48": "gnt.svg",
    "96": "gnt.svg"
  },

  "browser_action": {
    "default_title": "GH Notifications in Tabs"
  },

  "background": {
    "scripts": [
      "browser-polyfill.js",
      "background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [
        "*://github.com/notifications",
        "*://github.ibm.com/notifications"
      ],
      "js": [
        "browser-polyfill.js",
        "button.js"
      ]
    }
  ]

}
