{
  "manifest_version": 2,
  "name": "gh-notifications-in-tabs",
  "version": "1.0",

  "description": "Opens a full page of GitHub notifications in tabs.",
  "homepage_url": "https://github.com/gibfahn/gh-notifications-in-tabs",

  "permissions": [
    "activeTab"
  ],

  "icons": {
    "32": "gnit.svg",
    "48": "gnit.svg",
    "96": "gnit.svg"
  },

  "browser_action": {
    "default_title": "GH Notifications"
  },

  "background": {
    "scripts": [
      "browser-polyfill.js",
      "background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": ["*://github.com/notifications"],
      "js": [
        "browser-polyfill.js",
        "button.js"
      ]
    }
  ]

}
